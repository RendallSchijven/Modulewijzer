@*<form method="post" id="Docent_verwijderen"></form>*@

<div class="table-responsive">
    <h3>Leraren aan modulewijzer toevoegen</h3>
    <table class="table-bordered">
        <tr>
            <th>Achternaam</th>
            <th>Voorletters</th>
            <th>Tussenvoegsel</th>
        </tr>
        @using (var connection = new SqlConnection(DbConnection.ConnectionString))
        {
            using (var command = connection.CreateCommand())
            {
                connection.Open();

                command.CommandText = "EXEC GetDocenten @ModuleId";
                command.Parameters.Add(new SqlParameter("@ModuleId", SqlDbType.Int) { Value = 0 });

                using (var reader = command.ExecuteReader())
                {
                    while (reader.Read())
                    {
                        docentId = reader.GetInt32(0);
                        Voorletters = reader.GetString(1);
                        Achternaam = reader.GetString(2);
                        Tussenvoegsel = reader.GetString(3);

                        <tr>
                            <td>@Achternaam</td>
                            <td>@Voorletters</td>
                            <td>@Tussenvoegsel</td>
                            <td><a href="Docent_verwijderen?docentId=@docentId">Verwijderen</a></td>
                            @*<td><button type="submit" name="Docent_verwijderen" class="btn btn-danger" value="docentId" form="Docent_verwijderen"><i class="fa fa-trash" aria-hidden="true"></i> Verwijderen</button></td>*@
                        </tr>
                    }
                }

            }
            connection.Close();
        }
    </table>
    <br />
    <a href="~/Default.cshtml" class="btn btn-default" role="button"><i class="fa fa-arrow-circle-left" aria-hidden="true"></i> Terug</a>
    <a href="~/Leraar_aanmaken.cshtml" class="btn btn-primary" role="button"><i class="fa fa-user-plus" aria-hidden="true"></i>  Nieuwe leraar aanmaken</a>
</div>