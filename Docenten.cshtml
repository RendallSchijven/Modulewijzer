@using Modulewijzer.DataAccess;
@using System.Data.SqlClient;
@using System;
@using System.Data;
@using System.Data.SqlClient;
@{
    Page.Title = "Docenten";
    Layout = "_Layout.cshtml";

    int docentId = 0;
    string Voorletters = "";
    string Achternaam = "";
    string Tussenvoegsel = "";

    //if (!Request.Form["Docent_verwijderen"].IsEmpty())
    //{
