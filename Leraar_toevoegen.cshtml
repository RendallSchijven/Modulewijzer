@{ 
    Layout = "_Layout.cshtml";
    Page.title = "Leraar toevoegen";

    Validation.RequireField("Leraar", "Je moet minstens 1 leraar toevoegen");

    if (IsPost && Validation.IsValid())
    {
        if (Request.Form["Voorletters"] != string.Empty)
        {
            //var module = TeacherFactory.GetModuleFromPostRequest(Request.Form);
            Response.Redirect("Leraar_toevoegen");
        }


    }
}

<div class="row">
    <div class="col-md-6 portfolio-item">
        <h2>Bestaande leraren toevoegen</h2>
        <form class="form-horizontal" method="post">

            <div class="form-group">
                <label for="Leraar">Leraren<span style="color: red;">*@Html.ValidationMessage("Leraar")</span></label><br>
                <input type="checkbox" id="Leraar" name="Leraar" placeholder="Leraar">Bas<br>
                <!--For loop om alle leraren uit de database te displayen-->
            </div>
            <div class="form-group">
                <button type="submit" name="Leraar_add" class="btn btn-primary" value="Leraar_add">Modulewijzer aanmaken</button>
            </div>
        </form>
    </div>

    <div class="col-md-6 portfolio-item">
        <h2>Nieuwe leraren toevoegen</h2>
        <form class="form-horizontal" method="post">

            <div class="form-group">
                <label for="Voorletters">Voorletters<span style="color: red;">*@Html.ValidationMessage("Voorletters")</span></label><br>
                <input type="text" id="Voorletters" name="Voorletters" placeholder="J.J">
            </div>

            <div class="form-group">
                <label for="Achternaam">Achternaam<span style="color: red;">*@Html.ValidationMessage("Achternaam")</span></label><br>
                <input type="text" id="Achternaam" name="Achternaam" placeholder="De Boer">
            </div>

            <div class="form-group">
                <button type="submit" name="Leraar_add" class="btn btn-primary" value="Leraar_add">Leraar toevoegen</button>
            </div>
        </form>
    </div>
</div>