
@{
    bool ingelogd = true;

    if (!Beveiliging.IsAuthenticated())
    {
        ingelogd = false;
    }
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>@Page.title</title>
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <script src="http://code.jquery.com/jquery-1.11.0.min.js"></script>
    <script src="http://netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
    <link href="css/style.css" rel="stylesheet">

    <script src="https://use.fontawesome.com/1ed468126c.js"></script>
</head>

<body>
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="Default">Home</a>
            </div>
            <div>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="~/Docenten.cshtml">Docenten</a></li>
                    <li><a href="~/Competenties.cshtml">Competenties</a></li>
                    @{ 
                        if (ingelogd == true)
                        {
                            <li><a href="~/Uitloggen.cshtml">Uitloggen <i class="fa fa-sign-out" aria-hidden="true"></i></a></li>
                        }
                        else
                        {
                            <li><a href="~/Inloggen.cshtml">Inloggen <i class="fa fa-sign-in" aria-hidden="true"></i></a></li>
                        }
                    }

                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        @RenderBody()
        <hr>
    </div>
</body>
</html>